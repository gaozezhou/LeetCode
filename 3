class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int ans = 0;
        map<char,int> m;
        for(int i = 0; i < 256; i++)
            m[i + char(0)] = -1;
        int i = -1;
        int j = 0;
        while(j < s.size()){
            // cout<<m[s[j]];
            i = max(i , m[s[j]]);
            ans = max(ans, j - i);
            m[s[j]] = j;
            j++;
        }
        return ans;
    }
};
